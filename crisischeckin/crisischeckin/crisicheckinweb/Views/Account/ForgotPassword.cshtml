@model crisicheckinweb.ViewModels.ForgotPasswordViewModel

@{
    ViewBag.Title = "Forgot your password?";
}

<div class="col-lg-6 col-sm-12 col-xs-12 col-md-6">
    <h3>@ViewBag.Title</h3>

    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
        </div>

        <div class="form-group required">
            @Html.LabelFor(m => m.UserNameOrEmail)
            @Html.TextBoxFor(m => m.UserNameOrEmail, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <input type="submit" value="Request new password" class="btn btn-success" />
        </div>
    }

</div>
